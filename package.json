{
  "name": "admin-task-management-system",
  "version": "1.0.0",
  "description": "MERN stack admin panel for task management with analytics and scheduling",
  "main": "api/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server-dev\" \"npm run client-dev\"",
    "server-dev": "cd api && npm run dev",
    "client-dev": "cd client && npm start",
    "build-client": "cd client && npm run build",
    "start-server": "cd api && npm start",
    "install-all": "npm install && cd api && npm install && cd ../client && npm install"
  },
  "dependencies": {
    "concurrently": "^7.6.0"
  },
  "devDependencies": {},
  "keywords": ["admin", "task-management", "MERN", "analytics"],
  "author": "",
  "license": "MIT"
}
